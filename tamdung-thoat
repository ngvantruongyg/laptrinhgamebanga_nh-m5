@Override
    public void keyPressed(KeyEvent e) {
        if (e.getKeyCode() == KeyEvent.VK_SPACE && !isGameOver && !isPaused) {
            isShooting = true;
        } else if (e.getKeyCode() == KeyEvent.VK_P) { // Tạm dừng trò chơi
            isPaused = !isPaused;
            if (isPaused) timer.stop();
            else timer.start();
        } else if (e.getKeyCode() == KeyEvent.VK_Q) { // Thoát trò chơi
            exitToMainMenu();
        }
    }
