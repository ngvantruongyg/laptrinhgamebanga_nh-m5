import java.awt.*;
import javax.swing.*;

public class Bullet {
    private int x, y;
    private int speed = 5;
    private int width = 10, height = 20;
    private Image image;

    public Bullet(int x, int y) {
        this.x = x;
        this.y = y;
        this.image = new ImageIcon("src/resources/dan.jpg").getImage(); // Tải hình ảnh cho đạn
    }

    public void move() {
        y -= speed; // Đạn di chuyển lên trên
    }

    public void draw(Graphics g) {
        g.drawImage(image, x, y, width, height, null); // Vẽ hình ảnh đạn
    }

    public Rectangle getBounds() {
        return new Rectangle(x, y, width, height);
    }
}
